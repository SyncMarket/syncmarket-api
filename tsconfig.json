{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "allowJs": true,
        "rootDirs": ["./src", "./__test__"],
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@application/*": ["application/*"],
            "@core/*": ["core/*"],
            "@infra/*": ["infra/*"],
            "@main/*": ["main/*"],
            "@test/*": ["../__test__/*"],
            "@/*": ["*"],
        },
        "declarationDir": "./dist/@types",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src", "__test__"],
    "exclude": []
}
