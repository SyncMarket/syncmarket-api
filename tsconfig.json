{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "allowJs": true,
        "rootDir": ".",
        "outDir": "./dist/lib",
        "baseUrl": "./",
        "paths": {
            "@application/*": ["src/application/*"],
            "@core/*": ["src/core/*"],
            "@infra/*": ["src/infra/*"],
            "@main/*": ["src/main/*"],
            "@test/*": ["test/*"],
            "@/*": ["src/*"],
        },
        "declarationDir": "./dist/@types",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*",
        "**/*.spec.ts",
        "test/infra/database/mongodb/mocks/Product.ts",
    ],
}
