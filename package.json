{
    "name": "syncmarket-api",
    "version": "1.0.0",
    "repository": "https://github.com/reisquaza/syncmarket-api",
    "author": "Jo√£o Victor Reis <joaovictor.reis2000@gmail.com>",
    "license": "MIT",
    "main": "dist/main/server.js",
    "scripts": {
        "start": "node src/main/server.ts",
        "build": "rimraf dist && tsc -p tsconfig-build.json",
        "build:watch": "yarn build -- --watch",
        "dev": "nodemon -L --watch ./src ./src/main/server.ts -x 'yarn build && node dist/main/server.js'",
        "start:dev": "concurrently --kill-others-on-fail \"yarn build:watch\" \"yarn dev\"",
        "up": "concurrently --kill-others-on-fail \"yarn build:watch\" \"docker-compose up\"",
        "down": "docker-compose down",
        "lint": "eslint --ignore-path .gitignore --ext .ts --fix",
        "test": "jest --passWithNoTests --runInBand",
        "test:staged": "yarn test -- --findRelatedTests",
        "test:ci": "yarn test -- --coverage",
        "test:usecases": "ts-node ./scripts/test-usecases.ts",
        "test:database": "ts-node ./scripts/test-database.ts",
        "test:controllers": "ts-node ./scripts/test-controllers.ts",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/module-alias": "^2.0.4",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.3",
        "prettier": "^3.2.4",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "axios": "^1.6.7",
        "dotenv": "^16.3.2",
        "express": "^4.18.2",
        "module-alias": "^2.2.3",
        "mongodb": "^6.3.0",
        "zod": "^3.22.4"
    },
    "lint-staged": {
        "*.ts": [
            "yarn lint",
            "yarn test:staged"
        ]
    },
    "_moduleAliases": {
        "@application": "dist/application",
        "@infra": "dist/infra",
        "@main": "dist/main",
        "@core": "dist/core",
        "@test": "dist/__test__"
    }
}
